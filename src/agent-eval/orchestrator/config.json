{
  "parallelism": {
    "max_concurrent_jobs": 5
  },
  "rate_limiting": {
    "api_requests_per_minute": 60,
    "retry_backoff_seconds": [
      1,
      2,
      4,
      8,
      16
    ]
  },
  "timeouts": {
    "task_execution_timeout": 300,
    "evolution_timeout": 1800,
    "validation_timeout": 120
  },
  "runtime_paths": {
    "runtime_dir": "runtime",
    "logs_dir": "logs",
    "state_dir": "state"
  }
}
